@*@model WebApplication3.Models.Kargocu*@
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var kargoSirketiList = ViewData["KargoSirketi"] as List<WebApplication3.Models.KargoSirketi>;
}
<h2>Yeni Kargocu</h2>
@using (Html.BeginForm("Create", "Kargocu", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Ad">Ad</label>
        <input class="form-control" name="Ad" />
        @*@Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })*@
    </div>
    <div class="form-group">
        <label for="Soyad">Soyad</label>
        <input class="form-control" name="Soyad" />
      @*  @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })*@
    </div>
    <div class="form-group">
        <label for="TcNo">TC NO</label>
        <input class="form-control" name="Tc" />
       @* @Html.TextBoxFor(x => x.TcNo, new { @class = "form-control" })*@
    </div>
    <div class="form-group">
        <label for="TelNo">Telefon</label>
        <input class="form-control" name="Tel" />
       @* @Html.TextBoxFor(x => x.TelNo, new { @class = "form-control", @type = "number" })*@
    </div>
    <div class="form-group">
        <label for="KargoSirketi">Kargo Şirketi</label>
        @Html.DropDownList("kargoSirketiId", new SelectList(kargoSirketiList.ToList(), "Id", "Ad"), "Kargo Şirketi Seçiniz", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
}
