@model WebApplication3.Models.Urun
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Ürün</h2>

@using (Html.BeginForm("Update", "Urun", FormMethod.Post))
{
   
<div class="form-group">
    <label for="exampleInputEmail1">Id</label>
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "@readonly" })
</div>
<div class="form-group">
    <label for="exampleInputEmail1">Ürün Ad</label>
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
</div>
    <button type="submit" class="btn btn-primary">Düzenle</button>
}

