@model IEnumerable<WebApplication3.Models.Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table class="table">
    <thead>
        <tr>
            <th scope="col">Ürün Id</th>
            <th scope="col">Ürün Ad</th>
            <th>
                <a href="@Url.Action("Creat","Urun")" class="btn btn-primary">Yeni</a>
               @* <button type="button" class="btn btn-primary">Yeni</button>*@
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ToList())
        {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Ad</td>
            <td>
                <a href="@Url.Action("Update","Urun",new { @Id = item.Id})" class="btn btn-danger">Düzenle</a>
            </td>         
            <td>
                <a href="@Url.Action("Delete","Urun",new { @Id = item.Id})" class="btn btn-danger">Sil</a>
            </td>
        </tr>
        }
    </tbody>
</table>













