@model IEnumerable<WebApplication3.Models.KargoSirketi>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">KargoSirketiAd</th>
                <th scope="col">KargoSirketiVergiNo</th>
                <th>
                    <a href="@Url.Action("Creat","KargoSirketi")" class="btn btn-primary">Yeni</a>
                    @* <button type="button" class="btn btn-primary">Yeni</button>*@
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ToList())
            {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Ad</td>
                <td>@item.VergiNo</td>
                <th>
                    <a href="@Url.Action("Delete","KargoSirketi",new { @Id = item.Id})" class="btn btn-danger">Sil</a>
                    <a href="@Url.Action("Update","KargoSirketi",new { @Id = item.Id})" class="btn btn-danger">Güncelle</a>
                </th>
            </tr>
        }
            </tbody>
        </table>