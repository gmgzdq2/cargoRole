@model WebApplication3.Models.KargoSirketi
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Kargo Şirketi</h2>

@using (Html.BeginForm("Update", "KargoSirketi", FormMethod.Post))
{

    <div class="form-group">
        <label for="exampleInputEmail1">Id</label>
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "@readonly" })
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Kargo Şirketi Ad</label>
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Kargo Şirketi Vergi No</label>
        @Html.TextBoxFor(x => x.VergiNo, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Düzenle</button>
}

