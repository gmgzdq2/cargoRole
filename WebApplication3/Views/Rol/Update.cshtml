@model WebApplication3.Models.Rol
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Rol</h2>

@using (Html.BeginForm("Update", "Rol", FormMethod.Post))
{

    <div class="form-group">
        <label for="Id">Id</label>
        <input name="Id" value="@Model.Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label for="Ad">Rolün Adı</label>
        <input name="Ad" value="@Model.Ad" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Düzenle</button>
}
