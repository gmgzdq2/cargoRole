@*@model WebApplication3.Models.Kullanici*@
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var rolList = ViewData["Rol"] as List<WebApplication3.Models.Rol>;
}
<h2>Yeni Kullanici</h2>
@using (Html.BeginForm("Create", "Kullanici", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Ad">Ad</label>
        <input class="form-control" name="Ad" />
        @*@Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })*@
    </div>
    <div class="form-group">
        <label for="Soyad">Soyad</label>
        <input class="form-control" name="Soyad" />
        @*  @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })*@
    </div>
    <div class="form-group">
        <label for="TcNo">TC NO</label>
        <input class="form-control" name="Tc" />
        @* @Html.TextBoxFor(x => x.TcNo, new { @class = "form-control" })*@
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input class="form-control" name="Email" />
        @* @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "form-control" })*@
    </div>
    <div class="form-group">
        <label for="Sifre">Sifre</label>
        <input class="form-control" name="Sifre" />
        @* @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", @type = "form-control" })*@
    </div>
    <div class="form-group">
        <label for="RolId">RolId</label>
        @Html.DropDownList("RolId", new SelectList(rolList.ToList(), "Id", "Ad"), "Rolünüzü Seçiniz", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
}
