@model WebApplication3.Models.Kullanici
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Kullanici</h2>

@using (Html.BeginForm("Update", "Kullanici", FormMethod.Post))
{

    <div class="form-group">
        <label for="exampleInputEmail1">Id</label>
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "@readonly" })
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Kullanici Ad</label>
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Kullanici Soyad</label>
        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Kullanici Tc NO</label>
        @Html.TextBoxFor(x => x.TcNo, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Kullanici Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Kullanici Sifre</label>
        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Düzenle</button>
}

