@model IEnumerable<WebApplication3.Models.Kullanici>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">TC</th>
            <th scope="col">Email</th>
            <th scope="col">Sifre</th>
            <th scope="col">RolAd</th>
            <th>
                <a href="@Url.Action("Create","Kullanici")" class="btn btn-primary">Yeni</a>
                @* <button type="button" class="btn btn-primary">Yeni</button>*@
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ToList())
        {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Ad</td>
            <td>@item.Soyad</td>
            <td>@item.TcNo</td>
            <td>@item.Email</td>
            <td>@item.Sifre</td>
            <th scope="row">@item.Rol.Ad</th>

            <td>
                <a href="@Url.Action("Update","Kullanici",new { @Id = item.Id})" class="btn btn-danger">Düzenle</a>
                <a href="@Url.Action("Delete","Kullanici",new { @Id = item.Id})" class="btn btn-danger">Sil</a>
            </td>

        </tr>
        }
    </tbody>
</table>

